{
    "name": "z-pot",
    "version": "0.0.25",
    "description": "",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/fancylife/z-pot.git"
    },
    "scripts": {
        "test": "jest --coverage",
        "pub": "sh ./tools/pub-npm.sh",
        "coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls"
    },
    "jest": {
        "verbose": true,
        "bail": false,
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 60,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "collectCoverageFrom": [
            "commands/*.{js,ts}",
            "libs/*.{js,ts}",
            "!libs/pot.js"
        ]
    },
    "bin": {
        "pot": "bin/pot.js"
    },
    "keywords": [
        "project",
        "overview",
        "statics"
    ],
    "author": "zhangchi",
    "license": "MIT",
    "dependencies": {
        "chalk": "^2.4.1",
        "commander": "^2.16.0",
        "decomment": "^0.9.4",
        "fs-extra": "^6.0.1",
        "inquirer": "^6.2.0",
        "jest": "^26.6.3",
        "jest-config": "^23.6.0",
        "moment": "^2.21.0"
    },
    "devDependencies": {
        "coveralls": "^3.1.0"
    }
}
